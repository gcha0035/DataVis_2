{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/gcha0035/DataVis_2/refs/heads/main/Wineproduction_June2024.csv",
    "format": {
      "type": "csv"
    }
  },
  "width": 350,
  "mark": "bar",
  "selection": {
    "StateFilter": {
      "type": "single",
      "fields": ["State"],
      "bind": {
        "input": "select",
        "options": [null, "VIC", "SA", "NSW", "WA", "TAS", "QLD"],
        "labels": ["All States", "Victoria", "South Australia", "New South Wales", "Western Australia", "Tasmania", "Queensland"],
        "name": "Select State: "
      }
    }
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": {
        "title": "State"
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Volume (L)",
      "type": "quantitative",
      "axis": {
        "title": "Total Volume Produced (L)"
      }
    },
    "color": {
      "field": "Geographical Indication",
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
      {
        "field": "Geographical Indication",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "Volume (L)",
        "type": "quantitative",
        "title": "Volume Produced (L)"
      }
    ]
  },
  "transform": [
    {
      "filter": {
        "selection": "StateFilter"
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "grid": false
    }
  }
}
