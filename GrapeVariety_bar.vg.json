{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Grape Variety Production Volume in 2024",
  "title": "Top 20 Grape Variety Production Volume",
  "width": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/gcha0035/DataVis_2/refs/heads/main/GrapeVarietyProduction.csv",
    "format": {
      "type": "csv"
    }
  },
  "selection": {
    "highlight": {
      "type": "multi",
      "fields": ["Wine Type"],
      "bind": "legend"
    }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Grape Variety",
      "type": "nominal",
      "title": "Grape Variety",
      "axis": {
        "labelFontSize": 10
      }
    },
    "y": {
      "aggregate": "sum",
      "field": " Volume (L) ",
      "type": "quantitative",
      "title": "Total Volume Produced (L)"
    },
    "color": {
      "field": "Wine Type",
      "type": "nominal",
      "scale": {
        "domain": ["Red", "White", "Unknown"],
        "range": ["#9B1B30", "#DEB887", "grey"]
      },
      "title": "Wine Type"
    },
    "opacity": {
      "condition": {
        "selection": "highlight",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {"field": "Grape Variety", "type": "nominal", "title": "Grape Variety"},
      {"field": "Wine Type", "type": "nominal", "title": "Wine Type"},
      {
        "aggregate": "sum",
        "field": " Volume (L) ",
        "type": "quantitative",
        "title": "Total Volume (L)",
        "format": ","
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
