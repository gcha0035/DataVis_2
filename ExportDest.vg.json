{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Export Destinations in 2024 by Country",
  "data": {
    "url": "https://raw.githubusercontent.com/gcha0035/DataVis_2/refs/heads/main/DestinationMarket.csv",
    "format": {"type": "csv"}
  },
  "selection": {
    "country_highlight": {
      "type": "multi",
      "fields": ["Country"],
      "bind": "legend"
    }
  },
  "mark": {
    "type": "arc",
    "tooltip": true
  },
  "encoding": {
    "theta": {
      "field": "Export Value",
      "type": "quantitative"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "scheme": "category20"
      }
    },
    "opacity": {
      "condition": {
        "selection": "country_highlight",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country", "title": "Country"},
      {"field": "Export Value", "title": "Export Value", "format": ",.2f"},
      {"field": "Percentage", "title": "Percentage (%)", "format": ".0f"}
    ]
  },
  "view": {
    "stroke": null
  }
}
