{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Scatter Plot of Value vs Volume Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/gcha0035/DataVis_2/main/WineExports.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "year(datum['Month year ending'])",
      "as": "Year"
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Volume (L)",
      "type": "quantitative",
      "title": "Volume (L)",
      "scale": {
        "domain": [600000000, 900000000]
      }
    },
    "y": {
      "field": "Value ($)",
      "type": "quantitative",
      "title": "Value ($)",
      "scale": {
        "domain": [1700000000, 2900000000]
      },
      "axis": {
        "format": "$,.0f"
      }
    },
    "color": {
      "field": "Year",
      "type": "nominal",
      "title": "Year",
      "scale": {
        "scheme": "category10"
      }
    },
    "opacity": {
      "condition": {
        "test": "datum.Year <= yearSlider",
        "value": 1
      },
      "value": 0
    },
    "tooltip": [
      {"field": "Month year ending", "title": "Year"},
      {"field": "Value ($)", "title": "Value ($)", "format": "$,.0f"},
      {"field": "Volume (L)", "title": "Volume (L)", "format": ",.0f"}
    ]
  },
  "params": [
    {
      "name": "yearSlider",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2024,
        "step": 1,
        "name": "Year"
      }
    }
  ]
}
